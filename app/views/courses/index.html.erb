<p id="notice"><%= notice %></p>

<h2 class="center-align header">Courses</h2>

<div class="row">
  <div class="col s12">
    <% @courses.each do |course| %>
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">
              <%= course.code %>: <%= course.name %>
            </span>
            <p><%= truncate(course.description, :length => 100 ) %></p>
            <span class="dateinfo">Start Date: <%= course.start_date.to_date.to_formatted_s(:long) %></span><br>
            
          </div>
          <div class="card-action">
            <a href="#">Enroll</a>
            <%= link_to 'Info', course %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<br>

<%= link_to 'New Course', new_course_path %>
