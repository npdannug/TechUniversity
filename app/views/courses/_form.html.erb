<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s3">
      <%= form.text_field :code, class: "validate", id: "code" %>
      <label class="active" for="code">Course Code</label>
    </div>
    <div class="input-field col s9">
      <%= form.text_field :name, class: "validate", id: "name" %>
      <label class="active" for="name">Course Name</label>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <%= form.text_area :description, id: "description", class: "materialize-textarea" %>
          <label for="description">Description</label>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="input-field col s3">
      <%= form.text_field :start_date, class: "datepicker", id: "sdate" %>
      <label class="active" for="sdate">Start Date</label>
    </div>
    <div class="input-field col s3">
      <%= form.text_field :end_date, class: "datepicker", id: "edate" %>
      <label class="active" for="edate">End Date</label>
    </div>
  </div>

  <div class="actions center-align ">
    <%= button_tag(:class => "waves-effect waves-light btn submit") do %>
      <i class="material-icons left">cloud</i> Submit
    <% end %>
    <%= link_to courses_path, class: "waves-effect waves-light orange darken-1 btn btn-secondary submit" do %>
      <i class="material-icons left">close</i> Cancel
    <% end %>
  </div>
<% end %>
